# Define addition procedure
proc add {a b} {
    return [expr $a + $b]
}

# Define subtraction procedure
proc subtract {a b} {
    return [expr $a - $b]
}

# Define multiplication procedure
proc multiply {a b} {
    return [expr $a * $b]
}

# Define division procedure
proc divide {a b} {
    if {$b == 0} {
        return "Error: Division by zero"
    }
    return [expr $a / $b]
}

# Main calculator loop
while {1} {
    puts "Calculator Options:"
    puts "1. Addition"
    puts "2. Subtraction"
    puts "3. Multiplication"
    puts "4. Division"
    puts "5. Quit"
    
    set choice [gets stdin]
    
    if {$choice == 5} {
        puts "Exiting the calculator."
        break
    }
    
    set num1 [gets stdin]
    set num2 [gets stdin]
    
    switch $choice {
        1 {
            set result [add $num1 $num2]
            puts "Result: $result"
        }
        2 {
            set result [subtract $num1 $num2]
            puts "Result: $result"
        }
        3 {
            set result [multiply $num1 $num2]
            puts "Result: $result"
        }
        4 {
            set result [divide $num1 $num2]
            puts "Result: $result"
        }
        default {
            puts "Invalid choice."
        }
    }
}
